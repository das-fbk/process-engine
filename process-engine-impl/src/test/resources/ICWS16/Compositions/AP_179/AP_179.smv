-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service388_SMC_ActivateServiceRequest, service388_RESET, service389_SMC_SubscribeAndPay, service389_RESET, service389_SMC_MobilityCardRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service388_SMC_ActivateServiceReply, service389_SMC_MobilityCardReply
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service388
VAR service388: {ST2, ST1, ST0};
ASSIGN
next(service388) :=
case
(service388 = ST1 & input = service388_RESET): ST0;
(service388 = ST0 & input = service388_SMC_ActivateServiceRequest): ST1;
(service388 = ST1 & output = service388_SMC_ActivateServiceReply): ST2;
(service388 = ST2 & input = service388_RESET): ST0;
1:service388;
esac;
TRANS ( input = service388_SMC_ActivateServiceRequest) -> (service388 = ST0)
TRANS ( input = service388_RESET) -> (service388 = ST2 | service388 = ST1)
TRANS ( output = service388_SMC_ActivateServiceReply) -> (service388 = ST1)

--	 service389
VAR service389: {ST2, ST1, ST3, ST0};
ASSIGN
next(service389) :=
case
(service389 = ST0 & input = service389_SMC_MobilityCardRequest): ST1;
(service389 = ST1 & input = service389_RESET): ST0;
(service389 = ST2 & output = service389_SMC_MobilityCardReply): ST3;
(service389 = ST3 & input = service389_RESET): ST0;
(service389 = ST1 & input = service389_SMC_SubscribeAndPay): ST2;
(service389 = ST2 & input = service389_RESET): ST0;
1:service389;
esac;
TRANS ( input = service389_SMC_SubscribeAndPay) -> (service389 = ST1)
TRANS ( output = service389_SMC_MobilityCardReply) -> (service389 = ST2)
TRANS ( input = service389_RESET) -> (service389 = ST2 | service389 = ST1 | service389 = ST3)
TRANS ( input = service389_SMC_MobilityCardRequest) -> (service389 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 HandlePayment
VAR HandlePayment: {PAYMENT_EXECUTED, INITIAL};
ASSIGN
next(HandlePayment) :=
case
(input = service389_SMC_SubscribeAndPay):{(PAYMENT_EXECUTED)};
1:HandlePayment;
esac;
--	 HandleSmartMobilityCard
VAR HandleSmartMobilityCard: {INITIAL, SUBSCRIPTION, CARD_RELEASED, SERVICE_ADDED};
ASSIGN
next(HandleSmartMobilityCard) :=
case
(HandleSmartMobilityCard = SUBSCRIPTION & output = service389_SMC_MobilityCardReply): CARD_RELEASED;
(HandleSmartMobilityCard = CARD_RELEASED & output = service388_SMC_ActivateServiceReply): SERVICE_ADDED;
(HandleSmartMobilityCard = INITIAL & input = service389_SMC_SubscribeAndPay): SUBSCRIPTION;
1:HandleSmartMobilityCard;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service388_SMC_ActivateServiceRequest) -> ((((HandleSmartMobilityCard = CARD_RELEASED))))
TRANS (input = service389_SMC_MobilityCardRequest) -> ((((HandleSmartMobilityCard = INITIAL))))
TRANS (output = service389_SMC_MobilityCardReply) -> ((((HandleSmartMobilityCard = SUBSCRIPTION))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((HandleSmartMobilityCard in {SERVICE_ADDED}));
--	 Synchronicity enforcement
TRANS (service388 in {ST1}) -> (next(service388) != service388)
TRANS (service389 in {ST2}) -> (next(service389) != service389)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((HandlePayment = INITIAL) & (HandleSmartMobilityCard = INITIAL))
INIT ((service388 = ST0) & (service389 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)