-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service1_RA_MoveRequest, service1_RESET
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service1_RA_MoveResponse
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service1
VAR service1: {ST2, ST1, ST0};
ASSIGN
next(service1) :=
case
(service1 = ST2 & input = service1_RESET): ST0;
(service1 = ST1 & input = service1_RESET): ST0;
(service1 = ST1 & output = service1_RA_MoveResponse): ST2;
(service1 = ST0 & input = service1_RA_MoveRequest): ST1;
1:service1;
esac;
TRANS ( input = service1_RA_MoveRequest) -> (service1 = ST0)
TRANS ( output = service1_RA_MoveResponse) -> (service1 = ST1)
TRANS ( input = service1_RESET) -> (service1 = ST2 | service1 = ST1)

-----------------------
--   O B J E C T S   --
-----------------------
--	 RobotStatus
VAR RobotStatus: {MOVED, DOOR_NOT_REACHED, DOOR_OPENED, INITIAL, DOOR_REACHED, DOOR_CROSSED};
ASSIGN
next(RobotStatus) :=
case
(RobotStatus = INITIAL & output = service1_RA_MoveResponse): MOVED;
1:RobotStatus;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service1_RA_MoveRequest) -> ((((RobotStatus = INITIAL))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((RobotStatus in {MOVED}));
--	 Synchronicity enforcement
TRANS (service1 in {ST1}) -> (next(service1) != service1)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((RobotStatus = INITIAL))
INIT ((service1 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)