-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service5_RESET, service5_PlanRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service5_PlanResponse
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service5
VAR service5: {ST2, ST1, ST0};
ASSIGN
next(service5) :=
case
(service5 = ST1 & output = service5_PlanResponse): ST2;
(service5 = ST1 & input = service5_RESET): ST0;
(service5 = ST0 & input = service5_PlanRequest): ST1;
(service5 = ST2 & input = service5_RESET): ST0;
1:service5;
esac;
TRANS ( output = service5_PlanResponse) -> (service5 = ST1)
TRANS ( input = service5_RESET) -> (service5 = ST2 | service5 = ST1)
TRANS ( input = service5_PlanRequest) -> (service5 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 GlobalPlanner
VAR GlobalPlanner: {ALTERNATIVES_SENT, PROCESSING_REQUEST, INITIAL};
ASSIGN
next(GlobalPlanner) :=
case
(GlobalPlanner = INITIAL & input = service5_PlanRequest): PROCESSING_REQUEST;
(GlobalPlanner = PROCESSING_REQUEST & output = service5_PlanResponse): ALTERNATIVES_SENT;
1:GlobalPlanner;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((GlobalPlanner in {ALTERNATIVES_SENT}));
--	 Synchronicity enforcement
TRANS (service5 in {ST1}) -> (next(service5) != service5)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((GlobalPlanner = INITIAL))
INIT ((service5 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)