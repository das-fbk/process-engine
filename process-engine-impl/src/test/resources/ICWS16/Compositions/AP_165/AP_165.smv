-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service370_SMC_ActivateServiceRequest, service370_RESET, service371_SMC_SubscribeAndPay, service371_RESET, service371_SMC_MobilityCardRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service370_SMC_ActivateServiceReply, service371_SMC_MobilityCardReply
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service370
VAR service370: {ST2, ST1, ST0};
ASSIGN
next(service370) :=
case
(service370 = ST0 & input = service370_SMC_ActivateServiceRequest): ST1;
(service370 = ST1 & input = service370_RESET): ST0;
(service370 = ST2 & input = service370_RESET): ST0;
(service370 = ST1 & output = service370_SMC_ActivateServiceReply): ST2;
1:service370;
esac;
TRANS ( input = service370_SMC_ActivateServiceRequest) -> (service370 = ST0)
TRANS ( input = service370_RESET) -> (service370 = ST2 | service370 = ST1)
TRANS ( output = service370_SMC_ActivateServiceReply) -> (service370 = ST1)

--	 service371
VAR service371: {ST2, ST1, ST3, ST0};
ASSIGN
next(service371) :=
case
(service371 = ST3 & input = service371_RESET): ST0;
(service371 = ST1 & input = service371_RESET): ST0;
(service371 = ST1 & input = service371_SMC_SubscribeAndPay): ST2;
(service371 = ST2 & output = service371_SMC_MobilityCardReply): ST3;
(service371 = ST2 & input = service371_RESET): ST0;
(service371 = ST0 & input = service371_SMC_MobilityCardRequest): ST1;
1:service371;
esac;
TRANS ( input = service371_SMC_SubscribeAndPay) -> (service371 = ST1)
TRANS ( output = service371_SMC_MobilityCardReply) -> (service371 = ST2)
TRANS ( input = service371_RESET) -> (service371 = ST2 | service371 = ST1 | service371 = ST3)
TRANS ( input = service371_SMC_MobilityCardRequest) -> (service371 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 HandlePayment
VAR HandlePayment: {PAYMENT_EXECUTED, INITIAL};
ASSIGN
next(HandlePayment) :=
case
(input = service371_SMC_SubscribeAndPay):{(PAYMENT_EXECUTED)};
1:HandlePayment;
esac;
--	 HandleSmartMobilityCard
VAR HandleSmartMobilityCard: {INITIAL, SUBSCRIPTION, CARD_RELEASED, SERVICE_ADDED};
ASSIGN
next(HandleSmartMobilityCard) :=
case
(HandleSmartMobilityCard = INITIAL & input = service371_SMC_SubscribeAndPay): SUBSCRIPTION;
(HandleSmartMobilityCard = SUBSCRIPTION & output = service371_SMC_MobilityCardReply): CARD_RELEASED;
(HandleSmartMobilityCard = CARD_RELEASED & output = service370_SMC_ActivateServiceReply): SERVICE_ADDED;
1:HandleSmartMobilityCard;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service370_SMC_ActivateServiceRequest) -> ((((HandleSmartMobilityCard = CARD_RELEASED))))
TRANS (input = service371_SMC_MobilityCardRequest) -> ((((HandleSmartMobilityCard = INITIAL))))
TRANS (output = service371_SMC_MobilityCardReply) -> ((((HandleSmartMobilityCard = SUBSCRIPTION))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((HandleSmartMobilityCard in {SERVICE_ADDED}));
--	 Synchronicity enforcement
TRANS (service370 in {ST1}) -> (next(service370) != service370)
TRANS (service371 in {ST2}) -> (next(service371) != service371)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((HandlePayment = INITIAL) & (HandleSmartMobilityCard = INITIAL))
INIT ((service370 = ST0) & (service371 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)