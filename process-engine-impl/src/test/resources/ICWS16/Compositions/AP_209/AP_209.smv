-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service422_CRP_PlanRequest, service422_RESET
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service422_CRP_PlanResponse
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service422
VAR service422: {ST2, ST1, ST0};
ASSIGN
next(service422) :=
case
(service422 = ST1 & input = service422_RESET): ST0;
(service422 = ST0 & input = service422_CRP_PlanRequest): ST1;
(service422 = ST1 & output = service422_CRP_PlanResponse): ST2;
(service422 = ST2 & input = service422_RESET): ST0;
1:service422;
esac;
TRANS ( output = service422_CRP_PlanResponse) -> (service422 = ST1)
TRANS ( input = service422_CRP_PlanRequest) -> (service422 = ST0)
TRANS ( input = service422_RESET) -> (service422 = ST2 | service422 = ST1)

-----------------------
--   O B J E C T S   --
-----------------------
--	 CarRoutePlan
VAR CarRoutePlan: {CAR_ROUTE_PLANNED, INITIAL};
ASSIGN
next(CarRoutePlan) :=
case
(CarRoutePlan = INITIAL & output = service422_CRP_PlanResponse): CAR_ROUTE_PLANNED;
1:CarRoutePlan;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service422_CRP_PlanRequest) -> ((((CarRoutePlan = INITIAL))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((CarRoutePlan in {CAR_ROUTE_PLANNED}));
--	 Synchronicity enforcement
TRANS (service422 in {ST1}) -> (next(service422) != service422)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((CarRoutePlan = INITIAL))
INIT ((service422 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)