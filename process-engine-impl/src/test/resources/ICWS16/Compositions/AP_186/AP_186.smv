-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service397_SMC_ActivateServiceRequest, service397_RESET, service399_SMC_SubscribeAndPay, service399_RESET, service399_SMC_MobilityCardRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service397_SMC_ActivateServiceReply, service399_SMC_MobilityCardReply
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service397
VAR service397: {ST2, ST1, ST0};
ASSIGN
next(service397) :=
case
(service397 = ST1 & input = service397_RESET): ST0;
(service397 = ST1 & output = service397_SMC_ActivateServiceReply): ST2;
(service397 = ST0 & input = service397_SMC_ActivateServiceRequest): ST1;
(service397 = ST2 & input = service397_RESET): ST0;
1:service397;
esac;
TRANS ( input = service397_SMC_ActivateServiceRequest) -> (service397 = ST0)
TRANS ( input = service397_RESET) -> (service397 = ST2 | service397 = ST1)
TRANS ( output = service397_SMC_ActivateServiceReply) -> (service397 = ST1)

--	 service399
VAR service399: {ST2, ST1, ST3, ST0};
ASSIGN
next(service399) :=
case
(service399 = ST0 & input = service399_SMC_MobilityCardRequest): ST1;
(service399 = ST2 & input = service399_RESET): ST0;
(service399 = ST2 & output = service399_SMC_MobilityCardReply): ST3;
(service399 = ST1 & input = service399_SMC_SubscribeAndPay): ST2;
(service399 = ST1 & input = service399_RESET): ST0;
(service399 = ST3 & input = service399_RESET): ST0;
1:service399;
esac;
TRANS ( input = service399_SMC_SubscribeAndPay) -> (service399 = ST1)
TRANS ( output = service399_SMC_MobilityCardReply) -> (service399 = ST2)
TRANS ( input = service399_RESET) -> (service399 = ST2 | service399 = ST1 | service399 = ST3)
TRANS ( input = service399_SMC_MobilityCardRequest) -> (service399 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 HandlePayment
VAR HandlePayment: {PAYMENT_EXECUTED, INITIAL};
ASSIGN
next(HandlePayment) :=
case
(input = service399_SMC_SubscribeAndPay):{(PAYMENT_EXECUTED)};
1:HandlePayment;
esac;
--	 HandleSmartMobilityCard
VAR HandleSmartMobilityCard: {INITIAL, SUBSCRIPTION, CARD_RELEASED, SERVICE_ADDED};
ASSIGN
next(HandleSmartMobilityCard) :=
case
(HandleSmartMobilityCard = SUBSCRIPTION & output = service399_SMC_MobilityCardReply): CARD_RELEASED;
(HandleSmartMobilityCard = INITIAL & input = service399_SMC_SubscribeAndPay): SUBSCRIPTION;
(HandleSmartMobilityCard = CARD_RELEASED & output = service397_SMC_ActivateServiceReply): SERVICE_ADDED;
1:HandleSmartMobilityCard;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service397_SMC_ActivateServiceRequest) -> ((((HandleSmartMobilityCard = CARD_RELEASED))))
TRANS (input = service399_SMC_MobilityCardRequest) -> ((((HandleSmartMobilityCard = INITIAL))))
TRANS (output = service399_SMC_MobilityCardReply) -> ((((HandleSmartMobilityCard = SUBSCRIPTION))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((HandleSmartMobilityCard in {SERVICE_ADDED}));
--	 Synchronicity enforcement
TRANS (service397 in {ST1}) -> (next(service397) != service397)
TRANS (service399 in {ST2}) -> (next(service399) != service399)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((HandlePayment = INITIAL) & (HandleSmartMobilityCard = INITIAL))
INIT ((service397 = ST0) & (service399 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)