-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service1_RESET, service1_PlanRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service1_PlanResponse
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service1
VAR service1: {ST2, ST1, ST0};
ASSIGN
next(service1) :=
case
(service1 = ST1 & output = service1_PlanResponse): ST2;
(service1 = ST1 & input = service1_RESET): ST0;
(service1 = ST0 & input = service1_PlanRequest): ST1;
(service1 = ST2 & input = service1_RESET): ST0;
1:service1;
esac;
TRANS ( output = service1_PlanResponse) -> (service1 = ST1)
TRANS ( input = service1_RESET) -> (service1 = ST2 | service1 = ST1)
TRANS ( input = service1_PlanRequest) -> (service1 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 GlobalPlanner
VAR GlobalPlanner: {ALTERNATIVES_SENT, PROCESSING_REQUEST, INITIAL};
ASSIGN
next(GlobalPlanner) :=
case
(GlobalPlanner = PROCESSING_REQUEST & output = service1_PlanResponse): ALTERNATIVES_SENT;
(GlobalPlanner = INITIAL & input = service1_PlanRequest): PROCESSING_REQUEST;
1:GlobalPlanner;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((GlobalPlanner in {ALTERNATIVES_SENT}));
--	 Synchronicity enforcement
TRANS (service1 in {ST1}) -> (next(service1) != service1)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((GlobalPlanner = INITIAL))
INIT ((service1 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)