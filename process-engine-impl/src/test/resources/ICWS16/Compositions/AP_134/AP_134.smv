-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service221_BS_RegistrationRequest, service221_BS_UpdateSmartMobilityCard, service221_RESET, service222_BS_PlanBikeRoute, service222_BS_ExecuteRouteRequest, service222_RESET
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service221_BS_RegistrationAck, service222_BS_ExecuteRouteAck
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service221
VAR service221: {ST2, ST1, ST3, ST0};
ASSIGN
next(service221) :=
case
(service221 = ST0 & input = service221_BS_RegistrationRequest): ST1;
(service221 = ST1 & input = service221_BS_UpdateSmartMobilityCard): ST2;
(service221 = ST2 & input = service221_RESET): ST0;
(service221 = ST2 & output = service221_BS_RegistrationAck): ST3;
(service221 = ST1 & input = service221_RESET): ST0;
(service221 = ST3 & input = service221_RESET): ST0;
1:service221;
esac;
TRANS ( input = service221_BS_RegistrationRequest) -> (service221 = ST0)
TRANS ( output = service221_BS_RegistrationAck) -> (service221 = ST2)
TRANS ( input = service221_BS_UpdateSmartMobilityCard) -> (service221 = ST1)
TRANS ( input = service221_RESET) -> (service221 = ST2 | service221 = ST1 | service221 = ST3)

--	 service222
VAR service222: {ST2, ST1, ST3, ST0};
ASSIGN
next(service222) :=
case
(service222 = ST0 & input = service222_BS_ExecuteRouteRequest): ST1;
(service222 = ST2 & input = service222_RESET): ST0;
(service222 = ST1 & input = service222_BS_PlanBikeRoute): ST2;
(service222 = ST2 & output = service222_BS_ExecuteRouteAck): ST3;
(service222 = ST1 & input = service222_RESET): ST0;
(service222 = ST3 & input = service222_RESET): ST0;
1:service222;
esac;
TRANS ( input = service222_BS_PlanBikeRoute) -> (service222 = ST1)
TRANS ( input = service222_BS_ExecuteRouteRequest) -> (service222 = ST0)
TRANS ( input = service222_RESET) -> (service222 = ST2 | service222 = ST1 | service222 = ST3)
TRANS ( output = service222_BS_ExecuteRouteAck) -> (service222 = ST2)

-----------------------
--   O B J E C T S   --
-----------------------
--	 BikeRoutePlan
VAR BikeRoutePlan: {ROUTE_PLANNED, INITIAL};
ASSIGN
next(BikeRoutePlan) :=
case
(input = service222_BS_PlanBikeRoute):{(ROUTE_PLANNED)};
1:BikeRoutePlan;
esac;
--	 BikeSharingTrip
VAR BikeSharingTrip: {RACK_REACHED, INITIAL, BIKE_ROUTE_PLANNED, USER_REGISTERED};
ASSIGN
next(BikeSharingTrip) :=
case
(BikeSharingTrip = INITIAL & output = service221_BS_RegistrationAck): USER_REGISTERED;
(BikeSharingTrip = USER_REGISTERED & input = service222_BS_PlanBikeRoute): BIKE_ROUTE_PLANNED;
(BikeSharingTrip = BIKE_ROUTE_PLANNED & output = service222_BS_ExecuteRouteAck): RACK_REACHED;
1:BikeSharingTrip;
esac;
--	 HandleSmartMobilityCard
VAR HandleSmartMobilityCard: {INITIAL, SUBSCRIPTION, CARD_RELEASED, SERVICE_ADDED};
ASSIGN
next(HandleSmartMobilityCard) :=
case
(HandleSmartMobilityCard = SERVICE_ADDED & input = service221_BS_UpdateSmartMobilityCard): CARD_RELEASED;
(input = service221_BS_UpdateSmartMobilityCard):{(SERVICE_ADDED)};
1:HandleSmartMobilityCard;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service221_BS_RegistrationRequest) -> ((((BikeSharingTrip = INITIAL))))
TRANS (input = service222_BS_ExecuteRouteRequest) -> ((((BikeSharingTrip = USER_REGISTERED))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((BikeSharingTrip in {USER_REGISTERED}));
--	 Synchronicity enforcement
TRANS (service221 in {ST2}) -> (next(service221) != service221)
TRANS (service222 in {ST2}) -> (next(service222) != service222)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((BikeRoutePlan = INITIAL) & (BikeSharingTrip = INITIAL) & (HandleSmartMobilityCard = INITIAL))
INIT ((service221 = ST0) & (service222 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)