-------------------------------
--   C O M P O S I T I O N   --
-------------------------------
MODULE dn_main

---------------------
--   I N P U T S   --
---------------------
IVAR input:
{
UNDEF, service390_SMC_ActivateServiceRequest, service390_RESET, service391_SMC_SubscribeAndPay, service391_RESET, service391_SMC_MobilityCardRequest
};

-----------------------
--   O U T P U T S   --
-----------------------
IVAR output:
{
UNDEF, service390_SMC_ActivateServiceReply, service391_SMC_MobilityCardReply
};

-------------------------
--   S E R V I C E S   --
-------------------------
--	 service390
VAR service390: {ST2, ST1, ST0};
ASSIGN
next(service390) :=
case
(service390 = ST0 & input = service390_SMC_ActivateServiceRequest): ST1;
(service390 = ST1 & input = service390_RESET): ST0;
(service390 = ST2 & input = service390_RESET): ST0;
(service390 = ST1 & output = service390_SMC_ActivateServiceReply): ST2;
1:service390;
esac;
TRANS ( input = service390_SMC_ActivateServiceRequest) -> (service390 = ST0)
TRANS ( input = service390_RESET) -> (service390 = ST2 | service390 = ST1)
TRANS ( output = service390_SMC_ActivateServiceReply) -> (service390 = ST1)

--	 service391
VAR service391: {ST2, ST1, ST3, ST0};
ASSIGN
next(service391) :=
case
(service391 = ST2 & output = service391_SMC_MobilityCardReply): ST3;
(service391 = ST3 & input = service391_RESET): ST0;
(service391 = ST1 & input = service391_SMC_SubscribeAndPay): ST2;
(service391 = ST1 & input = service391_RESET): ST0;
(service391 = ST2 & input = service391_RESET): ST0;
(service391 = ST0 & input = service391_SMC_MobilityCardRequest): ST1;
1:service391;
esac;
TRANS ( input = service391_SMC_SubscribeAndPay) -> (service391 = ST1)
TRANS ( output = service391_SMC_MobilityCardReply) -> (service391 = ST2)
TRANS ( input = service391_RESET) -> (service391 = ST2 | service391 = ST1 | service391 = ST3)
TRANS ( input = service391_SMC_MobilityCardRequest) -> (service391 = ST0)

-----------------------
--   O B J E C T S   --
-----------------------
--	 HandlePayment
VAR HandlePayment: {PAYMENT_EXECUTED, INITIAL};
ASSIGN
next(HandlePayment) :=
case
(input = service391_SMC_SubscribeAndPay):{(PAYMENT_EXECUTED)};
1:HandlePayment;
esac;
--	 HandleSmartMobilityCard
VAR HandleSmartMobilityCard: {INITIAL, SUBSCRIPTION, CARD_RELEASED, SERVICE_ADDED};
ASSIGN
next(HandleSmartMobilityCard) :=
case
(HandleSmartMobilityCard = SUBSCRIPTION & output = service391_SMC_MobilityCardReply): CARD_RELEASED;
(HandleSmartMobilityCard = INITIAL & input = service391_SMC_SubscribeAndPay): SUBSCRIPTION;
(HandleSmartMobilityCard = CARD_RELEASED & output = service390_SMC_ActivateServiceReply): SERVICE_ADDED;
1:HandleSmartMobilityCard;
esac;
-----------------------------------
--   P R E C O N D I T I O N S   --
-----------------------------------
TRANS (input = service390_SMC_ActivateServiceRequest) -> ((((HandleSmartMobilityCard = CARD_RELEASED))))
TRANS (input = service391_SMC_MobilityCardRequest) -> ((((HandleSmartMobilityCard = INITIAL))))
TRANS (output = service391_SMC_MobilityCardReply) -> ((((HandleSmartMobilityCard = SUBSCRIPTION))))
-----------------------------
--   I N V A R I A N T S   --
-----------------------------
--	 Synchronicity
TRANS (1-(input = UNDEF)) + (1-(output = UNDEF)) = 1

---------------------------------------
--   S Y N C H R O N I Z A T I O N   --
---------------------------------------
DEFINE SYNC0 := ((HandleSmartMobilityCard in {SERVICE_ADDED}));
--	 Synchronicity enforcement
TRANS (service390 in {ST1}) -> (next(service390) != service390)
TRANS (service391 in {ST2}) -> (next(service391) != service391)
-------------------------------
--   C O N T R O L L E R S   --
-------------------------------
--	 Fault Controller
VAR FAULT_CONTROLLER: { START, STOP };
INIT FAULT_CONTROLLER = START

ASSIGN
next(FAULT_CONTROLLER) := 
case
(FAULT_CONTROLLER = START & FALSE): STOP;
1: FAULT_CONTROLLER;
esac;

TRANS (output != UNDEF | input != UNDEF) -> (FAULT_CONTROLLER != STOP)

-------------------------------------
--   I N I T I A L I Z A T I O N   --
-------------------------------------
INIT ((HandlePayment = INITIAL) & (HandleSmartMobilityCard = INITIAL))
INIT ((service390 = ST0) & (service391 = ST0))

-----------------
--   G O A L   --
-----------------
MODULE main
VAR dn_main : dn_main;

GOAL ONEOF(
(dn_main.SYNC0), 1;
(dn_main.FAULT_CONTROLLER = STOP), 0

)